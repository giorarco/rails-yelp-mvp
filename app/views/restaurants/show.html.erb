<h1><%= @restaurant.name %></h1>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>

<h2> Reviews</h2>
<% @restaurant.reviews.each do |review|%>
    <p><%= review.rating %></p>
    <p><%= review.content %></p>
    <% end %>

<%=link_to "add review", new_restaurant_review_path(@restaurant) %>
<%=link_to "Go back", restaurants_path() %>
